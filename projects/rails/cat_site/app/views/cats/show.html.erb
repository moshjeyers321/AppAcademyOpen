<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attribute| %>
    <tr>
      <td><%= attribute.to_s.capitalize.split("_").join(" ") %></td>
      <td><%= @cat.send(attribute) %></td>
    </tr>
    <% end %>
</table>

<br><br>

<h2>Rental Requests</h2>

<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order('start_date').each do |request| %>
    <%= render 'request_tr', request: request %>
  <% end %>
</table>

<br>

<a href="/cat_rental_requests/new"><button>Make a Rental Request</button></a>

<br><br>
<a href="<%= edit_cat_url(@cat) %>"><button>Edit <%= @cat.name %></button></a>
<a href="<%= cats_url %>"><button>Back to the Cats!</button></a>
